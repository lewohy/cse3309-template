{
    // See https://go.microsoft.com/fwlink/?LinkId=733558
    // for the documentation about the tasks.json format
    "version": "2.0.0",
    "tasks": [
        {
            "label": "meson configure",
            "type": "shell",
            "command": "meson",
            "args": ["setup", "--reconfigure", "builddir"],
            "group": {
                "kind": "build",
                "isDefault": false
            }
        },
        {
            "label": "meson build",
            "type": "shell",
            "command": "meson",
            "args": ["compile", "-C", "builddir"],
            "group": {
                "kind": "build",
                "isDefault": true,
            },
            "dependsOn": [
                "meson configure"
            ]
        },
        {
            "label": "teco test",
            "type": "shell",
            "command": "teco",
            "args": [
                "--command",
                "${workspaceFolder}/builddir/a.out",
                "--case-dir",
                "cases",
                "--input-ext",
                "in",
                "--output-ext",
                "ans",
            ],
            "group": {
                "kind": "test",
                "isDefault": true,
            },
            "dependsOn": "meson build",
            "problemMatcher": [],
        },
    ],
}
