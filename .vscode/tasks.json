{
    // See https://go.microsoft.com/fwlink/?LinkId=733558
    // for the documentation about the tasks.json format
    "version": "2.0.0",
    "tasks": [
        {
            "label": "meson: setup",
            "type": "shell",
            "command": "uvx",
            "args": ["meson", "setup", "--reconfigure", "builddir"],
            "group": {
                "kind": "build",
                "isDefault": false
            }
        },
        {
            "label": "meson: build",
            "type": "shell",
            "command": "uvx",
            "args": ["meson", "compile", "-C", "builddir"],
            "group": {
                "kind": "build",
                "isDefault": true
            }
        },
        {
            "label": "teco: test",
            "type": "shell",
            "command": "teco",
            "args": [
                "--command",
                "${workspaceFolder}/builddir/a.out",
                "--case-dir",
                "cases"
            ],
            "group": {
                "kind": "test",
                "isDefault": true
            },
            "dependsOn": "meson: build"
        }
    ]
}
